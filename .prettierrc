{
    "semi": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.css",
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": "*.js",
            "options": {
                "semi": true,
                "singleQuote": true,
                "jsxSingleQuote": true,
                "bracketSpacing": true,
                "bracketSameLine": true,
                "arrowParens": "always"
            }
        },
        {
            "files": "*.html",
            "options": {
                "tabWidth": 2,
                "semi": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "bracketSameLine": true
            }
        }
    ],
    "plugins": ["prettier-plugin-tailwindcss"]
}
